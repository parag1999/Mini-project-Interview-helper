<% include ../partials/teacherHeader.ejs %>
    <div class="jumbotron" style="background:transparent !important">
        <form action="/postQuestion" method="POST">
            <label>Subject</label>
            <select class="form-control" name="subject">
                <% subjectOptions.forEach(val => { %>
                    <option value="<%= val %>"><%= val %></option>
                <% }) %>
            </select>
            <br>
            <br>
            <div class="form-group">
                <label>Question</label>
                <textarea class="form-control" rows="3" name="question"></textarea>
            </div>
            <br>
            <br>
            <div class="form-group">
                <label>Answer</label>
                <textarea class="form-control" rows="3" name="answer"></textarea>
            </div>
            <div class="form-group">
                <label>Duration</label>
                <input type="number" name="duration" class="form-control">
            </div>
            <div class="text-center">
                <button class="btn btn-primary">Post</button>
            </div>
        </form>
    </div>