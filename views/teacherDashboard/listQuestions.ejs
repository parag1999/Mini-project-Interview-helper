<% include ../partials/teacherHeader.ejs %>

    <div class="jumbotron" style="background:transparent !important">  
    <a  href="/postQuestions" style="display:block;width:200px" class="btn btn-primary my-1 ml-auto mr-auto">Post Questions</a> 
    
    <% questions.forEach(question => { %>
        <div class="card">
            <div class="card-header">
                <%= question.subject %>
            </div>
            <div class="card-body">
                <h5 class="card-title">Question : </h5>
                <p class="card-text">
                    <%= question.question %>
                </p>
                <hr>
                <h5 class="card-title">Answer : </h5>
                <p class="card-text">
                    <%= question.answer %>
                </p>
                <a href="/deleteQuestion/<%= question.question_id %>" class="btn btn-primary">Delete</a>
                <a href="/editQuestion/<%= question.question_id %>" class="btn btn-primary">Update</a>
            </div>
        </div>
        <br>
        <br>
        <% }) %>
    </div>