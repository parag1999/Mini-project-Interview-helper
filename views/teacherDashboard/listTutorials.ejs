<% include ../partials/teacherHeader.ejs %>

    
    <div class="jumbotron" style="background:transparent !important">  
        <a  href="/postTutorials" style="display:block;width:200px" class="btn btn-primary my-1 ml-auto mr-auto">Post Tutorials</a> 
    <% tutorials.forEach(tutorial => { %>
        <div class="card">
            <div class="card-header">
                <%= tutorial.subject %>
            </div>
            <div class="card-body">
                <h5 class="card-title">Link : </h5>
                <p class="card-text">
                    <iframe src="https://www.youtube.com/embed<%= tutorial.link %>" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </p>
                <a href="/deleteTutorial/<%= tutorial.tutorial_id %>" class="btn btn-primary">Delete</a>
                <a href="/editTutorial/<%= tutorial.tutorial_id %>" class="btn btn-primary">Update</a>
            </div>
        </div>
        <br>
        <br>
        <% }) %>
    </div>